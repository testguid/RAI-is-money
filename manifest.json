{
  "name": "RAI is money",
  "manifest_version": 3,
  "version": "0.5",
  "description": "RAI price and price conversion",
  "permissions": [
    "activeTab",
    "storage",
    "alarms"
  ],
  "content_scripts": [
	  {
	    "matches": ["<all_urls>"],
	    "run_at": "document_idle",
	    "js": ["datasource.js", "content.js"]
	  }
  ],
  "action": {
    "default_title": "RAI is money",
    "default_icon": "images/rai.png",
    "default_popup": "popup.html"
  },  
  "background": {
    "service_worker": "background.js"
  }
}